    var orderYCLDataList = null;
    //批量添加回调函数
    function AllMyBack(row) {
        var rowData = [];
        if (row && row.length > 0) {
            if (isOrderAdd) {
                //根据加工订单获取原材料推荐方案数据
                GetOrderYCLGridJson(row);
            }
            for (var i = 0; i < row.length; i++) {
                if (isOrderAdd && orderYCLDataList != null) {
                    var ycldataList = $.grep(orderYCLDataList, function (n, j) {
                        return (n.WorkOrderItemId == row[i].WorkOrderItemId);
                    });
                    if (ycldataList.length > 0) {
                        var ycldata = ycldataList[0];
                        row[i].WeightSmallPlanN = ycldata.WeightSmallPlanN == "" ? 0 : ycldata.WeightSmallPlanN;
                        row[i].SizeSelection = ycldata.SizeSelection == "" ? 0 : ycldata.SizeSelection;
                        row[i].RootNumber = ycldata.RootNumber == "" ? 0 : ycldata.RootNumber;
                        row[i].NumberH = ycldata.NumberH == "" ? 0 : ycldata.NumberH;
                    }
                }

                var mydata = {
                    ID: row[i].WorkOrderItemId,
                    OrderCode: row[i].OrderCode,
                    ComponentName: row[i].ComponentName,
                    MaterialCode: row[i].MaterialCode,
                    MaterialName: row[i].MaterialName,
                    SpecificationModel: row[i].SpecificationModel,
                    MeasurementUnitZl: row[i].MeasurementUnitZl,
                    ItemUseNum: row[i].ItemUseNum,
                    Number: row[i].Number,
                    NumberShow: row[i].Number,
                    WeightSmallPlan: row[i].WeightSmallPlan,
                    RMTypeName: "原材料",
                    Manufactor: row[i].Manufactor,
                    HeatNo: row[i].HeatNo,
                    TestReportNo: row[i].TestReportNo,
                    WeightSmallPlanNH: row[i].WeightSmallPlanNH == "" ? row[i].WeightSmallPlan : row[i].WeightSmallPlanNH,
                    WorkOrderItemId: row[i].WorkOrderItemId,
                    SizeSelectionStr: row[i].SizeSelection,
                    RootNumberStr: row[i].RootNumber,
                    SizeSelection: row[i].SizeSelection == "" ? 0 : row[i].SizeSelection,
                    RootNumber: row[i].RootNumber == "" ? 0 : row[i].RootNumber,
                    WeightSmallPlanN: row[i].WeightSmallPlanN,
                    NumberH: row[i].NumberH,
                    SizeSelectionH: row[i].SizeSelection == "" ? 0 : row[i].SizeSelection,
                    RootNumberH: row[i].RootNumber == "" ? 0 : row[i].RootNumber,
                    WeightSmallPlanNHH: row[i].WeightSmallPlanN,
                    NumberHH: row[i].NumberH,
                };
                if (row[i].MaterialName != "圆钢" && row[i].MaterialName != "螺纹钢") {
                    mydata.WeightSmallPlanN = row[i].WeightSmallPlan;
                    mydata.NumberH = row[i].Number;
                    mydata.RMTypeName = "原材料";
                    mydata.SizeSelection = 0;
                    mydata.SizeSelectionStr = 0;
                    mydata.RootNumber = 0;
                }
                rowData.push(mydata);
            }
        }
        lodeList(rowData);
    }

    //根据加工订单获取原材料推荐方案数据
    function GetOrderYCLGridJson(rowData) {
        var DetailsData = [];
        $.each(rowData, function (i, item) {
            var Detaild = {};
            Detaild.ItemUseNum = item.ItemUseNum;
            Detaild.Number = item.Number;
            Detaild.WeightSmallPlan = item.WeightSmallPlan;
            Detaild.WorkOrderItemId = item.WorkOrderItemId;
            Detaild.MaterialCode = item.MaterialCode;
            Detaild.MaterialName = item.MaterialName;
            Detaild.MeasurementUnitZl = item.MeasurementUnitZl;
            Detaild.SpecificationModel = item.SpecificationModel;
            DetailsData.push(Detaild);
        });
        var obj = {};
        obj.ProjectId = top.clients.projectId;
        obj.CollarCode = $("#CollarCode").val();
        obj.WorkAreaCode = $("#WorkAreaCode").val();
        obj.OrderDetailsDataStr = JSON.stringify(DetailsData).replace(/\"/g, "'");
        $.ajax({
            url: "@Url.Action("GetOrderYCLGridJson", "CloutStock")",
            data: obj,
            type: 'POST',
            dataType: "json",
            async: false,
            success: function (data) {
                orderYCLDataList = data;
                setBackData(data);
            }
        });
    }

    //去除重复表格数据
    function filterGridData(data) {
        var columnData = [];
        $("#gridList").jqGrid('saveRow', lastsel);
        var ids = $("#gridList").jqGrid('getDataIDs');//获取多行的id
        if (ids.length < 1) {
            columnData = data;
        }
        $(ids).each(function (index, item) {
            var rowData = $("#gridList").jqGrid("getRowData", item);
            columnData.unshift(rowData);
        });
        var codearry = [];
        columnData.forEach(function (v) { codearry.push(parseInt(v.WorkOrderItemId)); });
        $.each(data, function (index, item) {
            var r = $.inArray(item.WorkOrderItemId, codearry)
            if (r <= -1) {
                columnData.push(item);
            }
        });
        return columnData;
    }

    //删除行
    function btn_delete() {
        var rowId = $("#gridList").jqGrid('getGridParam', 'selrow');
        if (!rowId) {
            $.modalMsg("请选择数据", "warning");
            return false;
        }
        var rowData = $("#gridList").jqGrid("getRowData", rowId);
        var workOrderItemId = rowData.WorkOrderItemId;
        if (backData.length > 0) {
            var backDataTem = [];
            $.each(backData, function (i, j) {
                if (j.WorkOrderItemId != workOrderItemId) {
                    backDataTem.push(j);
                }
            });
            setBackData(backDataTem);
        }
        if (mydata.length > 0) {
            var backDataTem = [];
            $.each(mydata, function (i, j) {
                if (j.WorkOrderItemId != workOrderItemId) {
                    backDataTem.push(j);
                }
            });
            mydata = backDataTem;
        }
        $("#gridList").jqGrid('delRowData', rowId);
    }

    function getBackData() {
        return backData;
    }
    function setBackData(data) {
        backData = data;
        getRetYLData(backData);
    }
</script>

