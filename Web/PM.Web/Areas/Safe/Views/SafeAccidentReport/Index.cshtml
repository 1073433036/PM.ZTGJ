            async: false,
            success: function (data) {
                if (data.length != 0) {
                    if (id == undefined) {
                    } else if (id.style.backgroundColor == "rgb(0, 148, 255)") {
                        $("#row-content1").html('');
                        pinjie(data);
                        if (orgType == "1") {
                            btn_edit(data[0].ID);
                        }
                    } else if (id.style.backgroundColor == "rgb(186, 183, 183)") {

                    } else {
                        $("#row-content1").html('');
                        pinjie(data);
                    }
                } else {
                    if (id == undefined) {
                    } else if (id.style.backgroundColor == "rgb(0, 148, 255)") {
