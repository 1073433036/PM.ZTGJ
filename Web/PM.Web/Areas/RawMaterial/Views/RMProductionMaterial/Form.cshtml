                            $($(obj).parent()).next().next().html(Weight.toFixed(5));
                            $($($(obj).parent().parent()).children()[3]).html(cloutStockIDsStr);
                            var numberShow = $($($(obj).parent().parent()).children()[10]).html();
                            $($($(obj).parent().parent()).children()[13]).html(numberShow);
                            //$($($(obj).parent().parent()).children()[26]).html(Number);
                            $($($(obj).parent().parent()).children()[27]).html(Size);
