    //批量添加
    function btn_add() {
        var url = "/RawMaterial/SampleOrder/GetInOrderItemGridJson&keyValue=InOrderCode/" + $("#InOrderCode").val();
        var ret = selectClick('win_InOrderItem', url, 'Grid', '', '', '', '550px', '450px', function (data) {
