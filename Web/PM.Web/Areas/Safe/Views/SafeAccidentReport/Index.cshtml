    function btn_add(id) {
        var wk = $(id).html()
        var number = parseInt(wk.substring(1, wk.length - 1));
        var where = "?type=add&Week=" + number;
        CommonOpen("Form", "新增周例会", "@Url.Action("Form", "SafeAccidentReport")" + where, true, true)
