            Detaild.RMTypeName = item.RMTypeName;
            Detaild.NumberH = item.NumberH;
            Detaild.RootNumber = item.RootNumber;
            Detaild.WeightSmallPlanN = item.WeightSmallPlanN;
            Detaild.WorkOrderItemId = item.WorkOrderItemId;
            DetailsData.push(Detaild);
        });
    }
    function getPlanDetailsData() {
