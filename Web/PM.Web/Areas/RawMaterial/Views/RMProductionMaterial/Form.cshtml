    function regTextBox(obj, isf) {
        var reg = /^[0-9]*[1-9][0-9]*$/;
        if (isf) { reg = /\d+\.?\d{0,5}/; }
        var reg = $(obj).val().match(reg);
        var txt = '';
        if (reg != null) { txt = reg[0]; }
        $(obj).val(txt);
    }
    //尺寸选择
    function selecteTargetCostItem(obj, rowid, text) {
        var rowData = $("#gridList").jqGrid("getRowData", rowid);
        var materialCode = rowData.MaterialCode;
        var itemUseNum = rowData.ItemUseNum;
        var measurementUnitZl = rowData.MeasurementUnitZl;
        var weightSmallPlan = rowData.WeightSmallPlan;
        var number = rowData.Number;
        var workOrderItemId = rowData.WorkOrderItemId;
        var materialName = rowData.MaterialName;
