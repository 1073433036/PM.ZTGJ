                            var CloutStockIDs = [];
                            var Sizes = [];
                            var Numbers = [];
                            var backDataTem = [];
                            $.each(data.rowData, function (i, item) {
                                Size += parseFloat(item.SizeSelection);
                                Number += parseFloat(item.RootNumber);
                                Weight += parseFloat(item.WeightSmallPlanN);
                                if (item.RMTypeName == "余料") {
                                    CloutStockIDs.push(item.StockID);
                                }
                                Sizes.push(item.SizeSelection);
                                Numbers.push(item.RootNumber);

                                backDataTem.push(item);
                            });
