    function PostData(isPrint) {
        if (!$('#form1').formValid()) {
            return false;
        }
        var tableData = GetGridRowData();//明细信息
        if (tableData.length < 1) {
            return false;
        }
        var formData = $("#form1").formSerialize();
        if (!formData.ID && formData.ID == 0 && formData.ID == "") {
            formData.ID = 0;
        }
        //获取尺寸返回信息
        var backData = getBackData();
        $.submitForm({
            url: "@Url.Action("SubmitForm", "RMProductionMaterial")",
            param: { model: JSON.stringify(formData), itemModel: JSON.stringify(tableData), itemModelBack: JSON.stringify(backData), type: type },
            success: function (data) {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
                //1.当月领料订单分析饼状图
                if (typeof ($.currentWindow().thisMonthOrder) == 'function') {
                    $.currentWindow().thisMonthOrder();
                }
                //2.当月各站点领料分析
                if (typeof ($.currentWindow().thisMonthOrderZ) == 'function') {
                    $.currentWindow().thisMonthOrderZ();
                }
                if (isPrint == 2) {
                    var keyValue = data.data;
                    $.modalOpen({
                        id: "Print",
                        title: "打印",
                        url: "@Url.Action("Print", "RMProductionMaterial")" + "?keyValue=" + keyValue,
                        width: "70%",
                        height: "89%",
                        btn: null,
                    });
                }

            }
        })
    }

    //获取表格数据
    function GetGridRowData() {
        $("#gridList").jqGrid('saveRow', lastsel);
        var ids = $("#gridList").jqGrid('getDataIDs');//获取多行的id
        if (ids.length < 1) {
            $.modalMsg("明细数据不完整", "warning");
            return null;
        }
        var collarCode = $("#CollarCode").val();
        var columnData = [];
        var sumCount = 0;
        var weightSum = 0;
        $(ids).each(function (index, yu) {
            var rowData = $("#gridList").jqGrid("getRowData", yu);
            rowData.ID = 0;
            rowData.CollarCode = collarCode;
            var DemandNum = parseFloat(rowData.WeightSmallPlanN);
            if (isNaN(DemandNum)) {
                $.modalMsg("明细数据不完整", "warning");
                columnData = [];
                return false;
            }
            var weightSmallPlanNH = parseFloat(rowData.WeightSmallPlanNH);//未领料重量
            if (isNaN(weightSmallPlanNH) || weightSmallPlanNH <= 0) {
                $.modalMsg("领料已完成", "warning");
                columnData = [];
                return false;
            }
            if (rowData.NumberH == "0" || rowData.NumberH == "") {
                $.modalMsg(rowData.MaterialCode + "领料数量不能为0", "warning");
                columnData = [];
                return false;
            }
            if (rowData.InOrderItemId == "") {
                $.modalMsg(rowData.MaterialCode + "请选择炉批号", "warning");
                columnData = [];
                return false;
            }
            //var weightSmallPlan = parseFloat(rowData.WeightSmallPlan);//重量小计
            //var weightSmallPlanN = parseFloat(rowData.WeightSmallPlanN);//领料重量小计
            //if (isNaN(weightSmallPlan) || isNaN(weightSmallPlanN) || weightSmallPlan > weightSmallPlanN) {
            //    $.modalMsg("领料数据尺寸不够", "warning");
            //    columnData = [];
            //    return false;
            //}
            columnData.push(rowData);

            var weightSmallPlanN = parseFloat(rowData.WeightSmallPlanN);//领料重量小计
            sumCount += weightSmallPlanN;
            weightSum += parseFloat(rowData.WeightSmallPlan);
        });
        $("#Total").val(sumCount.toFixed(5));
        $("#WeightSum").val(weightSum.toFixed(5));
        return columnData;
    }
    //选项卡
    function selectTab(v) {
        var id = v.attr('id');
        if (id != "JBXX") {
            if (!$('#form1').formValid()) {
                return false;
            }
