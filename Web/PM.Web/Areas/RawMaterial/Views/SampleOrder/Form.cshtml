                //    $gridList.jqGrid('editRow', rowid, true);
                //    lastsel = rowid;

                //    $("#gridList>tbody").find("input:text").each(function () {
                //        var width = parseInt($(this).css("width").replace('px', '')) - 25;
                //        $(this).css("height", "20px").css("width", width + "px");
