        var workAreaCode = $("#WorkAreaCode").val();
        var where = "?MaterialCode=" + materialCode + "&ItemUseNum=" + itemUseNum +
                   "&WeightSmallPlan=" + weightSmallPlan + "&Number=" + number +
                   "&WorkOrderItemId=" + workOrderItemId + "&MaterialName=" + materialName +
                   "&Text=" + text + "&CollarCode=" + collarCode +
                   "&WorkAreaCode=" + workAreaCode + "&ProjectId=" + $("#ProjectId").val() +
                   "&SpecificationModel=" + rowData.SpecificationModel +
                   "&MeasurementUnitZl=" + measurementUnitZl;
